---
import '../styles/global.css'

const title = "BeelPedia"

import Header from "../components/Header.astro"
const { user, avatar, displayName } = Astro.props;
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>BeelPedia</title>
	</head>
	<body>
   <Header user={user} avatar={avatar} displayName={displayName}/>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
